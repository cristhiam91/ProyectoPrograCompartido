@model PmTool.UI.Models.Users

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>CreateMyAccount</title>

    <script type="text/javascript" src="~/Scripts/jquery-1.10.2.min.js"></script>
    <link rel="stylesheet" type="text/css" href="~/Content/bootstrap.min.css" />
    <script type="text/javascript" src="~/Scripts/bootstrap.min.js"></script>
    <link rel="stylesheet" type="text/css" href="~/Content/Wizzar.css" />
    <script type="text/javascript" src="~/Scripts/Wizzar.js"></script>



</head>
<body>
@using (Html.BeginForm("CreateMyAccount", "User", FormMethod.Post))
{
    <div class="container" id="CreateAccountContainer">
        <br />
        <br />
        <div class="stepwizard">
            <div class="stepwizard-row setup-panel" id="setupPanel">
                <div class="stepwizard-step">
                    <a href="#step-1" type="button" class="btn btn-primary btn-circle">1</a>
                    <p>Step 1</p>
                </div>
                <div class="stepwizard-step">
                    <a href="#step-2" type="button" class="btn btn-default btn-circle" disabled="disabled">2</a>
                    <p>Step 2</p>
                </div>
                <div class="stepwizard-step">
                    <a href="#step-3" type="button" class="btn btn-default btn-circle" disabled="disabled">3</a>
                    <p>Step 3</p>
                </div>
            </div>
        </div>
        <form role="form">
            <div class="row setup-content" id="step-1">
                <div class="col-xs-12">
                    <div class="col-md-12">
                        <h3> Step 1</h3>
                        <div class="form-group">
                            @Html.DisplayFor(model => model.User_type, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.Label("Id", htmlAttributes: new { @class = "control-label col-md-4" })
                            @Html.PasswordFor(model => model.User_id, new { style = "width:250px" })
                        </div>
                        <div class="form-group">
                            @Html.Label("Name", htmlAttributes: new { @class = "control-label col-md-4" })
                            @Html.EditorFor(model => model.User_name, new { htmlAttributes = new { style = "width:250px" } })
                        </div>
                        <div class="form-group">
                            @Html.Label("Password", htmlAttributes: new { @class = "control-label col-md-4" })
                            @Html.PasswordFor(model => model.User_password, new { style = "width:250px" })
                        </div>
                        <div class="form-group">
                            <button class="btn btn-primary nextBtn btn-lg pull-right" type="button">Next</button>
                        </div>

                    </div>
                </div>
            </div>
            <div class="row setup-content" id="step-2">
                <div class="col-xs-12">
                    <div class="col-md-12">
                        <h3> Step 2</h3>
                        <div class="form-group">
                            @Html.Label("Email", htmlAttributes: new { @class = "control-label col-md-4" })
                            @Html.EditorFor(model => model.User_email, new { htmlAttributes = new { style = "width:250px" } })
                        </div>
                        <div class="form-group">
                            @Html.Label("Phone", htmlAttributes: new { @class = "control-label col-md-4" })
                            @Html.TextBoxFor(model => model.User_phone, new { style = "width:250px" })
                        </div>
                        <div class="form-group">
                            @Html.Label("Age", htmlAttributes: new { @class = "control-label col-md-4" })
                            @*@Html.EditorFor(model => model.User_age, new { style = "width:50px" } )*@
                            @Html.TextBoxFor(model => model.User_age, new { style = "width:40px" })
                            @*<input maxlength="100" type="text" required="required" class="form-control" placeholder="Enter Last Name" />*@
                        </div>
                        <button class="btn btn-primary nextBtn btn-lg pull-right" type="button">Next</button>
                    </div>
                </div>
            </div>
            <div class="row setup-content" id="step-3">
                <div class="col-xs-12">
                    <div class="col-md-12">
                        <h3> Step 3</h3>
                        <div class="form-group">
                            @Html.Label("Secure question 1", htmlAttributes: new { @class = "control-label col-md-5" })
                            @Html.EditorFor(model => model.User_secure_question_1, new { htmlAttributes = new { style = "width:250px" } })
                        </div>
                        <br />
                        <div class="form-group">
                            @Html.Label("Secure question 2", htmlAttributes: new { @class = "control-label col-md-5" })
                            @Html.EditorFor(model => model.User_secure_question_2, new { htmlAttributes = new { style = "width:250px" } })
                        </div>
                        <br />
                        <div class="form-group">
                            @Html.Label("Secure question 3", htmlAttributes: new { @class = "control-label col-md-5" })
                            @Html.EditorFor(model => model.User_secure_question_3, new { htmlAttributes = new { style = "width:250px" } })
                        </div>
                        <br />
                        <input type="submit" class="btn btn-success btn-lg pull-right" value="Register"/>
                    </div>
                </div>
            </div>
        </form>
        <br />
    </div>
}
</body>
</html>
